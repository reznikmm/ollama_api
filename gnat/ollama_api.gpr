with "../config/ollama_api_config.gpr";
project Ollama_API is

   for Library_Name use "ollama_api";
   for Library_Version use Project'Library_Name & ".so." & Ollama_Api_Config.Crate_Version;

   for Source_Dirs use ("../source/", "../config/");
   for Object_Dir use "../obj/" & Ollama_Api_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Library_Dir use "../lib";

   type Library_Type_Type is ("relocatable", "static", "static-pic");
   Library_Type : Library_Type_Type :=
     external ("OLLAMA_API_LIBRARY_TYPE", external ("LIBRARY_TYPE", "static"));
   for Library_Kind use Library_Type;

   package Compiler is
      for Default_Switches ("Ada") use Ollama_Api_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Ollama_API;
